{
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto",
    "importOrder": [
        "^@angular/(?!material)(.*)$",
        "^@angular/material(.*)$",
        "^rxjs$",
        "^rxjs/(.*)$",
        "^(?!\\.+)+.*$",
        "^.*$"
    ],
    "importOrderParserPlugins": [
        "typescript",
        "decorators-legacy"
    ],
    "importOrderSeparation": false,
    "embeddedLanguageFormatting": "off",
    "overrides": [
        {
            "files": [
                "**/*.css",
                "**/*.scss",
                "**/*.html"
            ],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "*.component.html",
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": "*.component.ts",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        }
    ]
}
